{
    "name": "ST MEMS StdC drivers",
    "description": "Platform-independent drivers source code for STMicroelectronics MEMS motion and environmental sensors, based on C standard.",
    "keywords": "ST,MEMS,IMU,environmental sensor,accelerometer,gyroscope",
    "repository": {
        "type": "git",
        "url": "https://github.com/STMicroelectronics/STMems_Standard_C_drivers/"
    },
    "export": {
        "include": [
            "*_STdC/driver/*_reg.[ch]"
        ],
        "exclude": [
            "*_STdC/example/*.c"
        ]
    },
    "frameworks": "*",
    "platforms": "*",
    "examples":[
        "*_STdC/example/*.c"
    ],
    "build":{
        "srcFilter": [
            "+<*_STdC/driver/*_reg.[ch]>",
            "-<*_STdC/example/*.c>"
        ],
        "flags": [
            "-Dfloat_t=float",
            "-I*_STdC/driver/"
        ]
    }
}
